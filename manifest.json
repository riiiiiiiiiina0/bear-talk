{
  "manifest_version": 3,
  "name": "TabTalk",
  "version": "1.12",
  "description": "Share any tab's content in AI chat for smarter, more relevant responses.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/rainbow/icon-16x16.png",
    "32": "icons/rainbow/icon-32x32.png",
    "48": "icons/rainbow/icon-48x48.png",
    "128": "icons/rainbow/icon-128x128.png"
  },
  "action": {
    "default_icon": "icons/rainbow/icon-48x48.png",
    "default_title": "TabTalk",
    "default_popup": "components/popup.html"
  },
  "background": {
    "service_worker": "components/background.js",
    "type": "module"
  },
  "options_page": "components/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "libs/turndown.7.2.0.js",
        "libs/turndown-plugin-gfm.1.0.2.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "icons/rainbow/*.png",
        "icons/rainbow-dark/*.png",
        "icons/simple/*.png",
        "icons/simple-dark/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "components/contentScripts/interceptYoutubeSubtitles.js"
      ],
      "run_at": "document_end"
    }
  ]
}
